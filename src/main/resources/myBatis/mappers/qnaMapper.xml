<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="qnaMapper">
	<select id="qnaCount" resultType="java.lang.Integer"  parameterType="com.cyh.s3.util.Pager">
		select count(num) from qna <choose>
					<when test="kind == 'kt'">
						where title like '%'||#{search}||'%'
					</when>
					<when test="kind == 'kw'">
						where writer like '%'||#{search}||'%' 
					</when>
					<otherwise>
						where contents like '%'||#{search}||'%' 
					</otherwise>						
		</choose>
		
	</select>
		
	
	
	<select id="qnaList" resultType="com.cyh.s3.model.board.QnaVO" parameterType="com.cyh.s3.util.Pager">
		select * from( select rownum R , Q.* from
		(select * from qna  
		<choose>
					<when test="kind == 'kt'">
						where title like '%'||#{search}||'%' 
					</when>
					<when test="kind == 'kw'">
						where writer like '%'||#{search}||'%' 
					</when>
					<otherwise>
							where contents like '%'||#{search}||'%' 
					</otherwise>						
		</choose>
		
		order by num desc) Q)
		where R between  #{startRow}and #{lastRow} 
	
	</select>


	<insert id="qnaInsert" parameterType="com.cyh.s3.model.board.QnaVO" >
	 insert into qna values(board_seq.nextval,#{title},#{writer},#{contents},sysdate,0,0,0,0)
	
	</insert>
	


</mapper>