<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="noticeMapper">

	<select id="noticeCount" resultType="java.lang.Integer">
	
		select count(num) from notice
			
	
	</select>



	<select id="noticeList"  parameterType="com.cyh.s3.util.RowMaker" resultType="com.cyh.s3.model.board.NoticeVO">

		select * from 
			(select N.*,rownum R from
				(select * from notice order by num desc)N)
		where R between #{startRow} and #{lastRow}

	</select>



	<select id="noticeSelect" parameterType="java.util.Map"
		resultType="com.cyh.s3.model.board.NoticeVO">

		select * from notice where num=#{num}


	</select>

	<insert id="noticeWrite"
		parameterType="com.cyh.s3.model.board.NoticeVO">

		insert into notice
		values(board_seq.nextval, #{title}, #{writer}, #{contents} , sysdate , 0)

	</insert>

	<delete id="noticeDelete" parameterType="java.lang.Integer">

		delete notice where num=#{num}

	</delete>


	 <update id="noticeUpdate" parameterType="com.cyh.s3.model.board.NoticeVO">
	
		update notice set title=#{title} , writer=#{writer}, contents=#{contents} where num=#{num}
	
	</update> 
	
	
	
	

</mapper>